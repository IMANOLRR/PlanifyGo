@page "{id:int}"
@model Gestor_de_Tareas.Pages.EditTaskModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Tarea";
}

<div class="container mt-4">
    <h2>Editar Tarea</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <input type="hidden" asp-for="Input.id" />
        <div class="mb-3">
            <label asp-for="Input.Title" class="form-label">Título</label>
            <input asp-for="Input.Title" id="title" class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Input.Description" class="form-label">Descripción</label>
            <textarea asp-for="Input.Description" id="description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Tags" class="form-label">Etiquetas (separadas por coma)</label>
            <input asp-for="Input.Tags" id="tags" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Input.Priority" class="form-label">Prioridad</label>
            <select asp-for="Input.Priority" id="priority" class="form-select">
                <option value="1">Alta</option>
                <option value="2">Media</option>
                <option value="3">Baja</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Input.DueDate" class="form-label">Due Date</label>
            <input asp-for="Input.DueDate" type="date" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Guardar Cambios</button>
        <a asp-page="/ListTasks" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
