@page
@model Gestor_de_Tareas.Pages.ListTasksModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Mis Tareas";
}

<div class="container mt-4">
    <h2>Mis Tareas</h2>

    @if (Model.Tasks != null && Model.Tasks.Any())
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Tareas Completadas</th>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Etiquetas</th>
                    <th>Prioridad</th>
                    <th>Fecha de Vencimiento</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Tasks)
                {
                    <tr class="@(task.IsCompleted ? "table-success" : "")">
                        <td>
                            <form method="post" asp-page-handler="ToggleComplete" asp-route-id="@task.id" class="d-inline">
                                <input type="checkbox"
                                       class="form-check-input"
                                       @(task.IsCompleted ? "checked" : "")
                                       onchange="this.form.submit()" />
                            </form>
                        </td>
                        <td class="@(task.IsCompleted ? "task-completed" : "")">@task.title</td>
                        <td class="@(task.IsCompleted ? "task-completed" : "")">@task.description</td>
                        <td class="@(task.IsCompleted ? "task-completed" : "")">@task.tags</td>
                        <td class="@(task.IsCompleted ? "task-completed" : "")">@task.priority</td>
                        <td class="@(task.IsCompleted ? "task-completed" : "")">@task.DueDate?.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-page="/EditTask" asp-route-id="@task.id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-page="/DeleteTask" asp-route-id="@task.id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }

                
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No tienes tareas registradas.</div>
    }
</div>
        