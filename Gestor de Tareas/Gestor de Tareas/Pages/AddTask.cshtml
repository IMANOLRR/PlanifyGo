@page
@model Gestor_de_Tareas.Pages.AddTaskModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Agregar Tarea";
}

<div class="container mt-4">
    <h2>Agregar Nueva Tarea</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.title" class="form-label">Título</label>
            <input asp-for="Input.title" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Input.description" class="form-label">Descripción</label>
            <textarea asp-for="Input.description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label asp-for="Input.tags" class="form-label">Etiquetas (separadas por coma)</label>
            <input asp-for="Input.tags" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Input.priority" class="form-label">Prioridad</label>
            <select asp-for="Input.priority" class="form-select">
                <option value="1">Alta</option>
                <option value="2">Media</option>
                <option value="3">Baja</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>
